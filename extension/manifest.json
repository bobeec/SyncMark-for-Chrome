{
  "manifest_version": 3,
  "name": "SyncMark for Chrome",
  "version": "1.0.0",
  "description": "Chrome系ブラウザ対応ブックマーク同期サービス / Bookmark Synchronization Service for Chrome-based Browsers",
  "author": "SyncMark Team",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "http://localhost/*",
    "https://*.pages.dev/*",
    "https://*.sandbox.novita.ai/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "SyncMark for Chrome"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "options_page": "options.html"
}